FROM golang:1.23-alpine

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies and verify
RUN go mod download && go mod verify

# Copy source code
COPY . .

# Build the application
RUN go build -v -o main .

# Expose port (if needed for health checks)
EXPOSE 8080

# Run the binary
CMD ["./main"]
